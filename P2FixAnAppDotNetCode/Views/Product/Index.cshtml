@using P2FixAnAppDotNetCode.Models
@using System.Globalization
@model IEnumerable<P2FixAnAppDotNetCode.Models.Product>
@{
    ViewData["Title"] = Localizer["ProductList"];
}

<br/>
<div id="panel-body">
    <table class="table table-bordered table-striped table-sm">
        <thead>

        <tr>
            <th>
                <label>@Localizer["Name"]</label>
            </th>
            <th>
                <label>@Localizer["Description"]</label>
            </th>
            <th>
                <label>@Localizer["Price"]</label>
            </th>
            <th>
                <label>@Localizer["Stock"]</label>
            </th>
        </tr>
        </thead>
        <tbody>

        @foreach (Product p in Model)
        {
            var isDisabled = p.Stock == 0;

            <tr class="@(isDisabled ? "text-muted disabled-row" : "")">
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td style="text-align:center">@p.Price.ToString("C", new CultureInfo("fr-FR"))</td>
                <td style="text-align:center">@p.Stock</td>
                <td>
                    <form id="@p.Id" asp-action="AddToCart" asp-controller="Cart" method="post">
                        <input type="hidden" name="id" value="@p.Id"/>
                        <button type="submit" class="btn btn-primary" @(isDisabled ? "disabled" : "")>
                            @Localizer["AddToCart"]
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
